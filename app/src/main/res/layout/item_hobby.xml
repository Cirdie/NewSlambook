<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hobbyContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/hobby_item_background"
    android:padding="10dp">

    <!-- Icon -->
    <ImageView
        android:id="@+id/hobbyIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_hobbies"
        android:contentDescription="Hobby Icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="16dp" />

    <!-- Hobby Name -->
    <TextView
        android:id="@+id/hobbyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Add Hobbies"
        android:textColor="@color/dark_gray"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/hobbyIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="12dp" />

    <!-- Remove Button -->
    <ImageView
        android:id="@+id/removeHobbyButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete"
        android:contentDescription="Remove Hobby"
        android:visibility="gone"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_minimalist"
    tools:context=".CreateActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Illustration Image -->
        <ImageView
            android:id="@+id/illustrationImage"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:src="@drawable/create_background"
            android:contentDescription="Illustration"
            android:layout_marginBottom="24dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Your Slambook"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Input Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <!-- Slambook Name Input -->
            <EditText
                android:id="@+id/slambookNameInput"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Slambook name"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:singleLine="true"
                android:imeOptions="actionNext"/>

            <!-- Tagline Input -->
            <EditText
                android:id="@+id/taglineInput"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="Add a fun tagline"
                android:background="@drawable/rounded_edittext_background"
                android:padding="12dp"
                android:textSize="16sp"
                android:singleLine="true"
                android:imeOptions="actionNext"/>
        </LinearLayout>

        <!-- Buttons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Create Slambook Button -->
            <Button
                android:id="@+id/createButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/rounded_button_background"
                android:text="Create Slambook"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Cancel Button -->
            <Button
                android:id="@+id/cancelButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/rounded_button_background"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
